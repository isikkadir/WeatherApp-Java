<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/consolidated_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GÃ¼n Adi"
        android:gravity="center"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/consolidated_abbr"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/consolidated_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/consolidated_minAbbr"
                android:layout_width="66dp"
                android:layout_height="47dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/consolidated_minTemp"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="minTemp"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/consolidated_maxAbbr"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/consolidated_maxTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="minTemp"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>